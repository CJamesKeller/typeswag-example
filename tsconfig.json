{
  "compilerOptions": {
      "noImplicitAny": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "strict": true,
      "noUnusedLocals": true,
      "moduleResolution": "node",
      "baseUrl": "./",
      "target": "ES5",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "resolveJsonModule": true,
      "paths": {
          "@controllers/*": ["controllers/*"]
      }
  }
}
